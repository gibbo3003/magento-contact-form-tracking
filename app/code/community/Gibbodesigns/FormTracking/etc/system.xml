<?xml version="1.0"?>
<!--
/**
 * Gibbodesigns
 * Adds contact form tracking the admin under Sales > Google Api > Google From Tracking(tab)
 *
 */
-->
<config>
    <sections>
        <google translate="label" module="gibbodesigns">
            <groups>
                <formtracking translate="label">
                    <label>Google Contact Form Tracking</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <category translate="label">
                            <label>Category</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>11</sort_order>
                            <backend_model>gibbodesigns/system_config_validate_field</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Typically the object that was interacted with (e.g. button)</comment>
                        </category>
                        <action translate="label">
                            <label>Action</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <backend_model>gibbodesigns/system_config_validate_field</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The type of interaction (e.g. click)</comment>
                        </action>
                        <label translate="label">
                            <label>Label</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Useful for categorizing events (e.g. nav buttons)</comment>
                        </label>
                        <value translate="label">
                            <label>Value</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>14</sort_order>
                            <backend_model>gibbodesigns/system_config_validate_num</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Values must be non-negative. Useful to pass counts (e.g. 4 times)</comment>
                        </value>
                    </fields>
                </formtracking>
            </groups>
        </google>
    </sections>
</config>
